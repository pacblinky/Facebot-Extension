{
  "manifest_version": 3,
  "name": "FaceBot",
  "version": "1.0",
  "description": "FaceBot Extension",
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "scripting",
    "webNavigation",
    "unlimitedStorage",
    "webRequest"
  ],

  "host_permissions": ["https://*/*", "http://*/*"],

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "https://facebook.com/*", "https://*.proton.me/*", "https://proton.me/*"],
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ]
}